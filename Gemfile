ruby '3.2.2'

gem 'sinatra'
gem 'rails'
gem 'puma'

group :development, :test do
  gem 'cucumber', '~> 4.0.0'  # Check the latest version of cucumber
  gem 'cucumber-sinatra', '>= 0.5.0'
  gem 'capybara', '~> 3.0'    # Update to latest version compatible with Rails 8

  gem 'rspec', '~> 3.10'

  gem 'rspec-autotest', '1.0.0'

  gem 'rack-test', '>= 2.0'
  gem 'byebug', '~> 11.0'     # Update to the latest byebug version
  gem 'launchy', '>= 2.5.0'   # Update launchy to latest compatible version
  gem 'rerun', '>= 0.12.0'    # Update rerun to latest version
end